<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="5dp" android:background="#FFF">
    <ImageView
        android:id="@+id/icon_contact"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/photo" />
    <TextView
        android:id="@+id/text_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_contact"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:text="王领导"
        android:textSize="23sp"
        android:textColor="#000" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/good_black"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/text_friend_reward"
        />
    <TextView
        android:background="@color/gold"
        android:id="@+id/text_friend_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:text="20"
        android:textSize="20sp"
        android:textColor="#000" />
</RelativeLayout>